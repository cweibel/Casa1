<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.casa1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rice Ball"
        android:id="@+id/bRiceBall"
        android:width="200dp"
        android:nestedScrollingEnabled="false"
        android:onClick="riceBall"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_light" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banana Pepper Sand"
        android:id="@+id/bBananaPepperSandwich"
        android:width="200dp"
        android:layout_below="@+id/bRiceBall"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_light"
        android:onClick="bananaPepperSandwich" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrap"
        android:id="@+id/bWrap"
        android:layout_below="@+id/bBananaPepperSandwich"
        android:layout_alignParentStart="true"
        android:width="200dp"
        android:background="@android:color/holo_red_light"
        android:onClick="wrap" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTotal"
        android:width="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggplant Parm"
        android:id="@+id/bEggplantParm"
        android:width="200dp"
        android:layout_below="@+id/bWrap"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:onClick="eggplantParm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rigatoni Vodka"
        android:id="@+id/bRigatoniVodka"
        android:width="200dp"
        android:layout_below="@+id/bEggplantParm"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_dark"
        android:onClick="rigatoni" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sausage + Banana Pep Sandwich"
        android:id="@+id/bSausageBananaSandwich"
        android:width="200dp"
        android:layout_below="@+id/bRigatoniVodka"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:onClick="sausageBananaPepperSandwich" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Peppers"
        android:id="@+id/button6"
        android:width="200dp"
        android:background="@color/abc_search_url_text_normal"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:onClick="twoPeppers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza Slice"
        android:id="@+id/button7"
        android:width="200dp"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:onClick="pizza" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtRiceBall"
        android:layout_alignBottom="@+id/bRiceBall"
        android:layout_toEndOf="@+id/bRiceBall"
        android:maxWidth="100dp"
        android:width="70dp"
        android:text="7"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtBananaPepperSand"
        android:maxWidth="100dp"
        android:width="70dp"
        android:layout_above="@+id/bWrap"
        android:layout_alignStart="@+id/txtRiceBall"
        android:text="8"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtWrap"
        android:maxWidth="100dp"
        android:width="70dp"
        android:layout_above="@+id/bEggplantParm"
        android:layout_alignStart="@+id/txtBananaPepperSand"
        android:text="8"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtEggplantParm"
        android:maxWidth="100dp"
        android:width="70dp"
        android:layout_above="@+id/bRigatoniVodka"
        android:layout_alignStart="@+id/txtWrap"
        android:text="7"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtRigatoni"
        android:maxWidth="100dp"
        android:width="70dp"
        android:layout_above="@+id/bSausageBananaSandwich"
        android:layout_alignStart="@+id/txtEggplantParm"
        android:text="7"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtSausageBananaPepperSandwich"
        android:maxWidth="100dp"
        android:width="70dp"
        android:layout_alignBottom="@+id/bSausageBananaSandwich"
        android:layout_alignStart="@+id/txtRigatoni"
        android:text="10"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtTwoPeppers"
        android:maxWidth="100dp"
        android:width="70dp"
        android:layout_above="@+id/button7"
        android:layout_alignStart="@+id/txtSausageBananaPepperSandwich"
        android:text="6"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPizza"
        android:maxWidth="100dp"
        android:width="70dp"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignStart="@+id/txtTwoPeppers"
        android:text="4"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:width="150dp"
        android:textColor="@android:color/white"
        android:onClick="clearAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sausage Sandwich"
        android:id="@+id/button"
        android:width="200dp"
        android:layout_below="@+id/txtSausageBananaPepperSandwich"
        android:layout_alignParentStart="true"
        android:onClick="sausageSandwich" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtSausageSandwich"
        android:maxWidth="100dp"
        android:width="70dp"
        android:text="8"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/button"
        android:layout_alignStart="@+id/txtTwoPeppers" />

</RelativeLayout>

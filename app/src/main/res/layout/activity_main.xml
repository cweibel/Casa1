<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.casa1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rice Ball"
        android:id="@+id/bRiceBall"
        android:width="200dp"
        android:nestedScrollingEnabled="false"
        android:onClick="riceBall"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banana Pepper Sand"
        android:id="@+id/bBananaPepperSandwich"
        android:width="200dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_light"
        android:onClick="bananaPepperSandwich"
        android:layout_below="@+id/bRiceBall"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrap"
        android:id="@+id/bWrap"
        android:layout_alignParentStart="true"
        android:width="200dp"
        android:background="@android:color/holo_red_light"
        android:onClick="wrap"
        android:layout_below="@+id/bBananaPepperSandwich"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTotal"
        android:width="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggplant Parm"
        android:id="@+id/bEggplantParm"
        android:width="200dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:onClick="eggplantParm"
        android:layout_below="@+id/bWrap"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rigatoni Vodka"
        android:id="@+id/bRigatoniVodka"
        android:width="200dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_orange_dark"
        android:onClick="rigatoni"
        android:layout_below="@+id/bEggplantParm"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sausage + Banana Pep Sandwich"
        android:id="@+id/bSausageBananaSandwich"
        android:width="200dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:onClick="sausageBananaPepperSandwich"
        android:layout_below="@+id/bRigatoniVodka"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Peppers"
        android:id="@+id/button6"
        android:width="200dp"
        android:background="@color/abc_search_url_text_normal"
        android:onClick="twoPeppers"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bSausageBananaSandwich"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza Slice"
        android:id="@+id/button7"
        android:width="200dp"
        android:background="@android:color/holo_red_dark"
        android:layout_alignParentStart="true"
        android:onClick="pizza"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtRiceBall"
        android:layout_alignBottom="@+id/bRiceBall"
        android:layout_toEndOf="@+id/bRiceBall"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="7"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtBananaPepperSand"
        android:maxWidth="60dp"
        android:width="50dp"
        android:layout_above="@+id/bWrap"
        android:layout_alignStart="@+id/txtRiceBall"
        android:text="8"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtWrap"
        android:maxWidth="60dp"
        android:width="50dp"
        android:layout_above="@+id/bEggplantParm"
        android:layout_alignStart="@+id/txtBananaPepperSand"
        android:text="8"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtEggplantParm"
        android:maxWidth="60dp"
        android:width="50dp"
        android:layout_above="@+id/bRigatoniVodka"
        android:layout_alignStart="@+id/txtWrap"
        android:text="7"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtRigatoni"
        android:maxWidth="60dp"
        android:width="50dp"
        android:layout_above="@+id/bSausageBananaSandwich"
        android:layout_alignStart="@+id/txtEggplantParm"
        android:text="7"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtSausageBananaPepperSandwich"
        android:maxWidth="60dp"
        android:width="50dp"
        android:layout_alignBottom="@+id/bSausageBananaSandwich"
        android:layout_alignStart="@+id/txtRigatoni"
        android:text="10"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtTwoPeppers"
        android:maxWidth="60dp"
        android:width="50dp"
        android:layout_above="@+id/button7"
        android:layout_alignStart="@+id/txtSausageBananaPepperSandwich"
        android:text="6"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPizza"
        android:maxWidth="60dp"
        android:width="50dp"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignStart="@+id/txtTwoPeppers"
        android:text="4"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:width="150dp"
        android:textColor="@android:color/white"
        android:onClick="clearAll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sausage Sandwich"
        android:id="@+id/button"
        android:width="200dp"
        android:layout_alignParentStart="true"
        android:onClick="sausageSandwich"
        android:background="@android:color/holo_purple"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtSausageSandwich"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="8"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/button"
        android:layout_alignStart="@+id/txtTwoPeppers"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtRiceBall"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quantity"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/txtTotal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtyRiceBall"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/bRiceBall"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtyBananaPepperSand"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtBananaPepperSand"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtyWrap"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtWrap"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtyEggplantParm"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtEggplantParm"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtyRigatoni"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtRigatoni"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtySausageBananaPepperSand"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtSausageBananaPepperSandwich"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtyTwoPeppers"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtTwoPeppers"
        android:layout_alignStart="@+id/txtQtySausageBananaPepperSand" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtyPizza"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtPizza"
        android:layout_alignStart="@+id/txtQtyTwoPeppers" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtQtySausageSand"
        android:maxWidth="60dp"
        android:width="50dp"
        android:text="0"
        android:textAlignment="center"
        android:typeface="normal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtSausageSandwich"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
